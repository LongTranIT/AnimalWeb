<div id="body">
  <div class="body-container">
    {{#each data}}
      {{#with this as |animal|}}
        <div class="body-container__item">
          <a href="/info/{{animal.slug}}">
            <div
              id="carouselExampleIndicators{{animal.id}}"
              class="carousel slide body-container__img"
              data-ride="carousel"
              style="width: 60%;"
            >
              <ol class="carousel-indicators">
                <li
                  data-target="#carouselExampleIndicators{{animal.id}}"
                  data-slide-to="0"
                  class="active"
                ></li>
                {{#each animal.photos}}
                  {{#if @index}}
                    <li
                      data-target="#carouselExampleIndicators{{animal.id}}"
                      data-slide-to="{{@index}}"
                    ></li>
                  {{/if}}
                {{/each}}
              </ol>
              <div class="carousel-inner">
                {{#each animal.photos}}
                  {{#if @index}}
                    <div class="carousel-item">
                      <img
                        class="d-block w-100 item-img"
                        src="/assets{{this}}"
                        alt="{{animal.vietnamse_name}}"
                      />
                    </div>
                  {{else}}
                  <div class="carousel-item active">
                  <img
                    class="d-block w-100 item-img"
                    src="/assets{{this}}"
                    alt="{{animal.vietnamse_name}}"
                  />
                </div>
                  {{/if}}
                {{/each}}
              </div>
              <a
                class="carousel-control-prev"
                href="#carouselExampleIndicators{{animal.id}}"
                role="button"
                data-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="sr-only">Previous</span>
              </a>
              <a
                class="carousel-control-next"
                href="#carouselExampleIndicators{{animal.id}}"
                role="button"
                data-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="sr-only">Next</span>
              </a>
            </div>

            <div class="body-container__name">{{animal.vietnamse_name}}</div>
          </a>
        </div>
      {{/with}}
    {{/each}}

  </div>
</div>