<div id="body">
  <div class="body-container">
    {{#if search}}
      <div style="position: absolute;top:0">
        <h2>Kết quả tìm kiếm cho "{{search}}"</h2>
      </div>
    {{/if}}
    {{#each data}}
      {{#with this as |animal|}}
        <div class="body-container__item">
          <a href="/info/{{animal.slug}}">
            <div
              id="carouselExampleIndicators{{animal.id}}"
              class="carousel slide body-container__img"
              data-ride="carousel"
              style="width: 60%;"
            >
              <ol class="carousel-indicators">
                <li
                  data-target="#carouselExampleIndicators{{animal.id}}"
                  data-slide-to="0"
                  class="active"
                ></li>
                {{#each animal.photos}}
                  {{#if @index}}
                    <li
                      data-target="#carouselExampleIndicators{{animal.id}}"
                      data-slide-to="{{@index}}"
                    ></li>
                  {{/if}}
                {{/each}}
              </ol>
              <div class="carousel-inner">
                {{#each animal.photos}}
                  {{#if @index}}
                    <div class="carousel-item">
                      <img
                        class="d-block w-100 item-img"
                        src="/assets{{this}}"
                        alt="{{animal.vietnamse_name}}"
                      />
                    </div>
                  {{else}}
                    <div class="carousel-item active">
                      <img
                        class="d-block w-100 item-img"
                        src="/assets{{this}}"
                        alt="{{animal.vietnamse_name}}"
                      />
                    </div>
                  {{/if}}
                {{/each}}
              </div>
              <a
                class="carousel-control-prev"
                href="#carouselExampleIndicators{{animal.id}}"
                role="button"
                data-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="sr-only">Previous</span>
              </a>
              <a
                class="carousel-control-next"
                href="#carouselExampleIndicators{{animal.id}}"
                role="button"
                data-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="sr-only">Next</span>
              </a>
            </div>

            <div class="body-container__name">{{animal.vietnamse_name}}</div>
          </a>
        </div>
      {{/with}}
    {{/each}}

    <nav
      aria-label="Page navigation"
      style="position: absolute;bottom:0;z-index: 10;"
    >
      <ul class="pagination">
        <li class="page-item {{#if (ifEq currentPage 1)}}disabled{{/if}}">
          <a class="page-link" href="/discover/{{sub currentPage 1}}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
          </a>
        </li>
        {{#for 1 currentPage 1 }}
          <li class="page-item "><a class="page-link" href="/discover/{{this}}">{{ this}}</a></li>
        {{/for}}
        <li class="page-item active"><a class="page-link" href="#">{{currentPage}}</a></li>
        {{#for (sum currentPage 1) (sum totalPage 1) 1}}
          <li class="page-item "><a class="page-link" href="/discover/{{this}}">{{ this}}</a></li>
        {{/for}}
        <li class="page-item {{#if (ifEq currentPage totalPage)}}disabled{{/if}}">
          <a class="page-link" href="/discover/{{sum currentPage 1}}" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
          </a>
        </li>
      </ul>
    </nav>

  </div>
</div>
